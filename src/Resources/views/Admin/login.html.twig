{% extends '@WandiEasyAdminPlus/layout.html.twig' %}

{% block page_title %}
    {{ 'login.title'|trans({}, 'EasyAdminPlusBundle') }}
{% endblock %}

{% block body %}
    <body>

    <div class="login-container">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <h1 class="page-title">{{ config.site_name|raw }}</h1>
                    <div class="well">
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form action="{{ path("wandi_easy_admin_plus_login") }}" method="post">
                            <div class="form-group">
                                <label for="username">{{ 'login.username'|trans({}, 'EasyAdminPlusBundle') }}</label>
                                <input type="text" id="username" class="form-control" name="_username" value="{{ lastUsername }}" required="required"/>
                            </div>

                            <div class="form-group">
                                <label for="password">{{ 'login.password'|trans({}, 'EasyAdminPlusBundle') }}</label>
                                <input type="password" id="password" class="form-control" name="_password" required="required"/>
                            </div>

                            <div class="checkbox">
                                <label for="remember_me">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                    {{ 'login.remember_me'|trans({}, 'EasyAdminPlusBundle') }}
                                </label>
                            </div>

                            <input type="submit" id="_submit" class="btn btn-primary btn-block btn-lg" name="_submit" value="{{ 'login.submit'|trans({}, 'EasyAdminPlusBundle') }}"/>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}
